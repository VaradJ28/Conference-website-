---
import Layout from '../layouts/Layout.astro';
import { schedule } from '../data/schedule';
---

<Layout title="Conference Schedule | Conference 2024">
  <h1 class="text-4xl font-bold mb-8">Conference Schedule</h1>

  {schedule.map(day => (
    <div class="mb-12">
      <h2 class="text-2xl font-semibold mb-6">{day.date}</h2>
      <div class="grid gap-4">
        {day.sessions.map(session => (
          <div class="bg-white rounded-lg border p-6">
            <div class="flex justify-between items-start mb-4">
              <span class="text-gray-600">{session.time}</span>
              <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">
                {session.track}
              </span>
            </div>
            <h3 class="text-xl font-semibold mb-2">{session.title}</h3>
            <p class="text-gray-700">{session.description}</p>
            {session.speakers && (
              <p class="mt-4 text-gray-600">Speakers: {session.speakers.join(', ')}</p>
            )}
          </div>
        ))}
      </div>
    </div>
  ))}
</Layout>