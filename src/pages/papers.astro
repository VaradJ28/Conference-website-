---
import Layout from '../layouts/Layout.astro';
import { papers } from '../data/papers';
---

<Layout title="Research Papers | Conference 2024">
  <h1 class="text-4xl font-bold mb-8">Research Papers</h1>
  
  <div class="grid gap-6">
    {papers.map(paper => (
      <article class="border rounded-lg p-6 hover:shadow-lg transition">
        <h2 class="text-2xl font-semibold mb-2">{paper.title}</h2>
        <p class="text-gray-600 mb-4">By {paper.authors.join(', ')}</p>
        <p class="text-gray-700 mb-4">{paper.abstract}</p>
        <div class="flex gap-4">
          <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">
            {paper.track}
          </span>
          <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm">
            {paper.status}
          </span>
        </div>
      </article>
    ))}
  </div>
</Layout>