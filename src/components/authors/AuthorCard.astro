---
interface Paper {
  id: number;
  title: string;
}

interface Props {
  name: string;
  affiliation: string;
  bio: string;
  papers: Paper[];
}

const { name, affiliation, bio, papers } = Astro.props;
---

<div class="bg-white rounded-lg border p-6 hover:shadow-lg transition-shadow duration-300">
  <h2 class="text-2xl font-semibold mb-2 text-blue-900">{name}</h2>
  <p class="text-gray-600 mb-4">{affiliation}</p>
  <p class="text-gray-700 mb-4">{bio}</p>
  <div class="space-y-2">
    <h3 class="font-semibold text-blue-800">Papers:</h3>
    <ul class="list-disc list-inside text-blue-600">
      {papers.map(paper => (
        <li>
          <a href={`/papers/${paper.id}`} class="hover:underline">
            {paper.title}
          </a>
        </li>
      ))}
    </ul>
  </div>
</div>